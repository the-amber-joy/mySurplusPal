{
    "manifest_version": 2,

    "name": "My Surplus Pal",
    "version": "1.0",
    "description": "Puts a positive spin on the occasional bonus calories",
    "author": "Amber Joy",

    "permissions": ["activeTab"],
    "background": {
        "scripts" : ["background.js"],
        "persistent": false
        },
    "content_scripts": [{
          "matches": ["*://*.myfitnesspal.com/"],
          "js": ["jquery-3.3.1.slim.min.js"]
        }],
    "browser_action": {
      "icons": {
          "16": "burger_16.png",
          "48": "burger_48.png",
          "128": "burger_128.png"
      }
    }
}
