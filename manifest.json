{
    "manifest_version": 2,

    "name": "MySurplusPal",
    "version": "1.1.1",
    "description": "Puts a positive spin on the occasional bonus calories",
    "author": "Amber Joy",

    "permissions": [
        "tabs",
        "*://*.myfitnesspal.com/"
    ],
    "background": {
        "scripts" : ["background.js"],
        "persistent": false
        },
    "content_scripts": [{
          "matches": ["*://*.myfitnesspal.com/"],
          "js": ["jquery-3.3.1.slim.min.js"]
        }],
    "icons": {
        "16": "burger_16.png",
        "48": "burger_48.png",
        "128": "burger_128.png"
    },
    "browser_action": {
        "default_icon": "burger_16.png"
    }
}
